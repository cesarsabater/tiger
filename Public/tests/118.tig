let 
  function f (a : int,b :int,c: int) : int = let var d := 0
                                          var e := a
                                      in 
                                        d := d + b ;
                                        e := e - 1 ;
                                        while (e > 0) 
                                        do (
                                          d := d + b ;
                                          e := e - 1 
                                        ) ; 
                                        d + c
                                      end 
  
in
  f(3,5,7)
end
